<%= form_for(task) do |f| %>
	<% if task.errors.any? %>
	  <div id="error_explanation" >
	    <ul>
	      <% task.errors.full_messages.each do |task| %>
	      <li><%= task %></li>
	    <% end %>
	    </ul>
	  </div>
	  <% end %>
	  <body>
     <div class="container">
      <div class="row">
        <div class="visible-xs col-xs-12 visible-sm col-sm-offset-2 col-sm-6 visible-md col-md-offset-2 col-md-6 visible-lg col-lg-offset-3 col-lg-6"><%= f.label :status, 'ステータス' %></div>
        <div class="visible-xs col-xs-12 visible-sm col-sm-offset-2 col-sm-6 visible-md col-md-offset-2 col-md-6 visible-lg col-lg-offset-3 col-lg-6"><%= f.text_field :status %></div>
        <div class="visible-xs col-xs-12 visible-sm col-sm-offset-2 col-sm-6 visible-md col-md-offset-2 col-md-6 visible-lg col-lg-offset-3 col-lg-6"><%= f.label :content, 'タスク' %></div>
        <div class="visible-xs col-xs-12 visible-sm col-sm-offset-2 col-sm-6 visible-md col-md-offset-2 col-md-6 visible-lg col-lg-offset-3 col-lg-6"><%= f.text_field :content %></div>

        <div class="visible-xs col-xs-12 visible-sm col-sm-offset-2 col-sm-6 visible-md col-md-offset-2 col-md-6 visible-lg col-lg-offset-3 col-lg-6"><%= f.submit '作成'%></div>
      </div>
    </div>
    </body>
	<% end %>
